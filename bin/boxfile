#!/bin/bash
# -*- mode: bash; tab-width: 2; -*-
# vim: ts=2 sw=2 ft=bash noet

# source the Nos framework
. /opt/microbox/nos/common.sh

# initialize Nos with the original arguments
nos_init "$@"

# source common lib
. ${engine_lib_dir}/middleman.sh

cat <<-END
run.config:
  cache_dirs:
    - vendor/bundle
    - .bundle
    - node_modules
  extra_path_dirs:
    - $(nos_code_dir)/vendor/bundle/.bin
    - $(nos_code_dir)/node_modules/.bin
END
if [[ $(grep -c build_triggers /opt/microbox/hooks/lib/boxfile.rb) -gt 1 ]]; then
	cat <<-END
	  build_triggers:
	    - Gemfile
	    - Gemfile.lock
	END
fi
cat <<-END
web.middleman:
  start: nginx
END

exit 0
